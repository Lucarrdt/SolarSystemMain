<Window x:Class="SolarSystem75.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolarSystem75"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Canvas x:Name="Canvas" Background="Black">
        <Ellipse x:Name="Sun" Fill="Yellow" Width="100" Height="100" Canvas.Left="350" Canvas.Top="175"/>
        <Ellipse x:Name="Mercury" Fill="Gray" Width="10" Height="10" Canvas.Left="350" Canvas.Top="175"/>
        <Ellipse x:Name="Venus" Fill="Green" Width="20" Height="20" Canvas.Left="350" Canvas.Top="175"/>
        <Ellipse x:Name="Earth" Fill="Blue" Width="30" Height="30" Canvas.Left="350" Canvas.Top="175"/>
        <Ellipse x:Name="Mars" Fill="Red" Width="20" Height="20" Canvas.Left="350" Canvas.Top="175"/>
    </Canvas>
</Window>
